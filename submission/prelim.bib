	author = {Souza, Renata Carolini and Hungria, Mariangela and Cantão, Maurício Egídio and Vasconcelos, Ana Tereza Ribeiro and Nogueira, Marco Antonio and Vicente, Vânia Aparecida},
	month = feb,
