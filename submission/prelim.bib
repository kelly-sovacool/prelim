	file = {Clarke_1993_Australian_Journal_of_Ecology.pdf:/Volumes/GoogleDrive/My Drive/Zotero/storage/3D3F33N2/Clarke_1993_Australian_Journal_of_Ecology.pdf:application/pdf}
