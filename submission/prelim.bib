	note = {tex.ids: finucane\_taxonomic\_2014-1
publisher: Public Library of Science},
	keywords = {Microbiome, Sequence databases, Bacteria, Bacterial taxonomy, Body mass index, Microbial taxonomy, Obesity, Ribosomal RNA},
	pages = {e84689},
	file = {Finucane et al. - 2014 - A Taxonomic Signature of Obesity in the Microbiome.pdf:/Volumes/GoogleDrive/My Drive/Zotero/storage/3AYS3QL9/Finucane et al. - 2014 - A Taxonomic Signature of Obesity in the Microbiome.pdf:application/pdf;Finucane_et_al_2014_PLOS_ONE.pdf:/Volumes/GoogleDrive/My Drive/Zotero/storage/Q9XFDKGA/Finucane_et_al_2014_PLOS_ONE.pdf:application/pdf}
