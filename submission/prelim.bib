	author = {Royalty, Taylor M. and Steen, Andrew D.},
	month = apr,
	year = {2020},
	note = {tex.ids: royalty\_quantitative\_2020-1
publisher: Cold Spring Harbor Laboratory
section: New Results},
	keywords = {functional redundancy},
